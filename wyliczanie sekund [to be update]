#include <iostream>

using namespace std;

int main()
{
    int minut, godzin, sekund;
     
     cout<<"Podaj liczbe sekund: ";
     cin>>sekund;
     
     godzin = sekund/3600;  
     minut = sekund%3600/60;
     sekund = sekund%60; 
    
     
     cout<<"godzin: "<<godzin<<endl;
     cout<<"minut: "<<minut<<endl;
     cout<<"sekund: "<<sekund;
    
    
    return 0;
}



