void triangle(int)
{
    cout<<endl<<"==TRIANGLE FIELD=="<<endl;
    int a,h,t;
    cout<<"length side a: ";
    cin>>a;
    cout<<"hight (h): ";
    cin>>h;
    
    t = a*h/2;
    
    cout<<"Triangle field = "<<t;
}

